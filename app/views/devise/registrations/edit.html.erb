<% content_for :path do %>
  > <%= link_to t('views.paths.home'), home_path %>
  > profile
<% end %>

<h1><%= t('views.shared.edit_model', :model => t('activerecord.models.user')) %></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %> <span class="meta"><%= t('devise.registrations.full_name') %></span><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <span class="meta"><%= t('devise.registrations.password_leave_blank') %></span><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password %> <span class="meta"><%= t('devise.registrations.current_password') %></span><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit t('views.shared.update') %></div>
<% end %>

<h2><%= t('views.shared.delete_model', :model => t('views.shared.account')) %></h2>

<p>[<%= link_to t('devise.registrations.delete_my_account'), registration_path(resource_name), :data => { :confirm => t('devise.registrations.notice_before_delete') }, :method => :delete %>]
  <span class="meta">
  	<%= t('devise.registrations.notice_before_delete') %>
  </span></p>

<%= link_to t('views.shared.back'), :back %>
